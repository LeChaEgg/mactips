{
    "description": "Switch languages by right_command+e (English), right_command+c (Chinese), right_command+j (Japanese)",
    "manipulators": [
        {
            "from": {
                "key_code": "e",
                "modifiers": {
                    "mandatory": ["right_command"],
                    "optional": ["caps_lock"]
                }
            },
            "to": [
                { "select_input_source": { "language": "^en$" } },
                { "key_code": "vk_none" }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "c",
                "modifiers": {
                    "mandatory": ["right_command"],
                    "optional": ["caps_lock"]
                }
            },
            "to": [
                {
                    "select_input_source": {
                        "input_mode_id": "com.apple.inputmethod.SCIM.ITABC",
                        "input_source_id": "com.apple.inputmethod.SCIM.ITABC",
                        "language": "^zh-Hans$"
                    }
                },
                { "select_input_source": { "language": "^en$" } },
                {
                    "hold_down_milliseconds": 20,
                    "key_code": "spacebar",
                    "modifiers": ["left_control"]
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "j",
                "modifiers": {
                    "mandatory": ["right_command"],
                    "optional": ["caps_lock"]
                }
            },
            "to": [
                {
                    "select_input_source": {
                        "input_mode_id": "com.apple.inputmethod.Japanese",
                        "input_source_id": "com.apple.inputmethod.Kotoeri.RomajiTyping.Japanese",
                        "language": "^ja$"
                    }
                },
                { "select_input_source": { "language": "^en$" } },
                {
                    "hold_down_milliseconds": 20,
                    "key_code": "spacebar",
                    "modifiers": ["left_control"]
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "g",
                "modifiers": {
                    "mandatory": ["right_command"],
                    "optional": ["caps_lock"]
                }
            },
            "to": [
                { "select_input_source": { "language": "^el$" } },
                { "key_code": "vk_none" }
            ],
            "type": "basic"
        }
    ]
}
